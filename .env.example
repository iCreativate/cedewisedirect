# Database (required if not using demo-only mode)
DATABASE_URL="postgresql://USER:PASS@HOST:5432/DB"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Dummy / demo logins (no database required when enabled)
# In development, demo logins work automatically. In production, set both:
DEMO_MODE=true
NEXT_PUBLIC_DEMO_MODE=true

# Optional: auto-create a broker user on first login (development)
# DEV_AUTOPROVISION=true
